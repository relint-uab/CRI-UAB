<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.alexa.centreforinternationalrelationsuab.user.UserProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:columnCount="2"
                android:padding="8dp">

                <!-- Row 1 -->
                <!-- Column 1 -->
                <android.support.v7.widget.CardView
                    android:id="@+id/card_accommodation"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:layout_rowWeight="1"
                    android:background="@drawable/ripple_transparent_btn"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:id="@+id/accommodation_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_rounded"
                        android:contentDescription="@string/service_card_img"
                        android:foreground="@drawable/card_ripple_effect"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dormitory2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@android:drawable/screen_background_dark_transparent"
                        android:text="@string/accommodation"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                </android.support.v7.widget.CardView>

                <!-- Column 2 -->
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:layout_rowWeight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/service_card_img"
                        android:foreground="@drawable/card_ripple_effect"
                        android:scaleType="centerCrop"
                        android:src="@drawable/foods" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@android:drawable/screen_background_dark_transparent"
                        android:text="@string/the_university_restaurant"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="12sp" />
                </android.support.v7.widget.CardView>


                <!-- Row 2 -->
                <!-- Column 1 -->
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:layout_rowWeight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/service_card_img"
                        android:foreground="@drawable/card_ripple_effect"
                        android:scaleType="centerCrop"
                        android:src="@drawable/library" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@android:drawable/screen_background_dark_transparent"
                        android:text="@string/the_university_library"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                </android.support.v7.widget.CardView>

                <!-- Column 2 -->
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:layout_rowWeight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/service_card_img"
                        android:foreground="@drawable/card_ripple_effect"
                        android:scaleType="centerCrop"
                        android:src="@drawable/health_care" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@android:drawable/screen_background_dark_transparent"
                        android:text="@string/students_health_service"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="12sp" />
                </android.support.v7.widget.CardView>

                <!-- Row 2 -->
                <!-- Column 1 -->
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:layout_rowWeight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient"
                        android:contentDescription="@string/service_card_img"
                        android:foreground="@drawable/card_ripple_effect"
                        android:scaleType="centerCrop"
                        android:src="@drawable/uab_logo" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@android:drawable/screen_background_dark_transparent"
                        android:text="@string/student_identification_card"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                </android.support.v7.widget.CardView>

                <!-- Column 2 -->
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:layout_rowWeight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/service_card_img"
                        android:foreground="@drawable/card_ripple_effect"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sport_uab" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@android:drawable/screen_background_dark_transparent"
                        android:text="@string/students_sport_centre"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="12sp" />
                </android.support.v7.widget.CardView>
                <!-- Row 3 -->
                <!-- Column 1 span 2 -->
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:layout_rowWeight="1"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:contentDescription="@string/service_card_img"
                        android:focusable="true"
                        android:foreground="@drawable/card_ripple_effect"
                        android:scaleType="centerCrop"
                        android:src="@drawable/lsua" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@android:drawable/screen_background_dark_transparent"
                        android:text="@string/the_students_union_and_cultural_centre"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                </android.support.v7.widget.CardView>
            </GridLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
