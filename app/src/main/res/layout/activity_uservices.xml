<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.alexa.centreforinternationalrelationsuab.user.UserProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:columnCount="2"
                android:padding="12dp">

                <!-- Row 1 -->
                <!-- Column 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:layout_rowWeight="1"
                    android:background="@drawable/ripple_transparent_btn"
                    android:elevation="16dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_accomodation"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@drawable/ripple_transparent_btn"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="16dp">

                        <ImageView
                            android:id="@+id/accommodation_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_rounded"
                            android:clickable="true"
                            android:foreground="@drawable/card_ripple_effect"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dormitory2" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="@android:drawable/screen_background_dark_transparent"
                            android:text="Accomodation"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="12sp" />

                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <!-- Column 2 -->
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="6dp"
                        app:cardElevation="16dp"
                        app:cardCornerRadius="4dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:foreground="@drawable/card_ripple_effect"
                            android:scaleType="centerCrop"
                            android:src="@drawable/foods" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="The University Restaurant"
                            android:textColor="#fff"
                            android:textSize="12sp"
                            android:layout_gravity="bottom"
                            android:textAlignment="center"
                            android:background="@android:drawable/screen_background_dark_transparent"/>
                    </android.support.v7.widget.CardView>


                <!-- Row 2 -->
                <!-- Column 1 -->
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        app:cardElevation="16dp"
                        app:cardCornerRadius="4dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:foreground="@drawable/card_ripple_effect"
                            android:scaleType="centerCrop"
                            android:src="@drawable/library" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="The University Library"
                            android:textColor="#fff"
                            android:textSize="12sp"
                            android:layout_gravity="bottom"
                            android:textAlignment="center"
                            android:background="@android:drawable/screen_background_dark_transparent"/>

                    </android.support.v7.widget.CardView>

                <!-- Column 2 -->
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="6dp"
                        app:cardElevation="16dp"
                        app:cardCornerRadius="4dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:foreground="@drawable/card_ripple_effect"
                            android:scaleType="centerCrop"
                            android:src="@drawable/health_care" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Students' Health Service"
                            android:textColor="#fff"
                            android:textSize="12sp"
                            android:layout_gravity="bottom"
                            android:textAlignment="center"
                            android:background="@android:drawable/screen_background_dark_transparent"/>
                    </android.support.v7.widget.CardView>

                <!-- Row 2 -->
                <!-- Column 1 -->
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardElevation="16dp"
                    app:cardCornerRadius="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient"
                        android:clickable="true"
                        android:foreground="@drawable/card_ripple_effect"
                        android:scaleType="centerCrop"
                        android:src="@drawable/uab_logo" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Student Identification Card"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:layout_gravity="bottom"
                        android:textAlignment="center"
                        android:background="@android:drawable/screen_background_dark_transparent"/>

                </android.support.v7.widget.CardView>

                <!-- Column 2 -->
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="6dp"
                    app:cardElevation="16dp"
                    app:cardCornerRadius="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:foreground="@drawable/card_ripple_effect"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sport_uab" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Students' Sport Centre"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:layout_gravity="bottom"
                        android:textAlignment="center"
                        android:background="@android:drawable/screen_background_dark_transparent"/>
                </android.support.v7.widget.CardView>
                <!-- Row 3 -->
                <!-- Column 1 span 2 -->
                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:layout_columnSpan="2"
                        app:cardElevation="16dp"
                        app:cardCornerRadius="4dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:foreground="@drawable/card_ripple_effect"
                            android:scaleType="centerCrop"
                            android:src="@drawable/lsua" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="The Students' Union and Cultural Centre"
                            android:textColor="#fff"
                            android:textSize="12sp"
                            android:layout_gravity="bottom"
                            android:textAlignment="center"
                            android:background="@android:drawable/screen_background_dark_transparent"/>

                    </android.support.v7.widget.CardView>


            </GridLayout>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
